{% extends 'base.html.twig' %}

{% block title %}{{ book.book_name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ book.book_name }}</h1>
                <hr>
                <b>Description: </b>{{ book.description }}
                <form class="mt-4 p-4 bg-light" method="post">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('book_edit', {'id':book.id}) }}" class="btn" style="background-color: yellow; color: black">Edit details</a>
                {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}