{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-3 mb-4">Books</h1>
        <div class="row">
            {% for book in books %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ book.book_name }}</h5>
                            <p class="card-text">{{ book.description }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('book_detail', {'id':book.id}) }}" class="btn btn-dark">View details</a>
                                <a href="{{ path('book_delete', {'id':book.id}) }}" class="btn" style="background-color: red; color: white">Delete</a>
                                <a href="{{ path('book_edit', {'id':book.id}) }}" class="btn" style="background-color: green; color: white">Edit details</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}